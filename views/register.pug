doctype html
html
  head
    title Register
    include includes/base.pug
    script(type='text/javascript', src='javascripts/register.js')

  body
    include includes/navbar.pug
  div(class='container bs-docs-container')
    h2.
      Register
    form#register-form.form-horizontal
      .form-group
        label.col-sm-2 Username
        .col-sm-4
          input.form-control#username(type='text' autofocus)

      .form-group
        label.col-sm-2 Password
        .col-sm-4
          input.form-control#password(type='password')

      .form-group
        label.col-sm-2 Retype Password
        .col-sm-4
          input.form-control#passwordRetype(type='password')

      .form-group
        .col-sm-2
          input.btn#register(type='button', value='Register')
