
doctype html
html
  head
    title Setup Audio Lure Schedule
    include includes/base.pug
    link(href='/stylesheets/setupAudio.css', rel='stylesheet', media='screen')
    script(src="javascripts/includes/jquery.serializejson.min.js")
    script(type='text/javascript', src='javascripts/includes/util.js')
    script(src="javascripts/setupAudio.js")

  body
    include includes/navbar.pug

    .cacophony-page.max-width
      h1#Setup.col-xs-12.col-sm-8 Setup Audio Lure Schedule

      div#loading-message.col-xs-12 Loading your devices...

      #choose-device.hide.row.col-xs-12
        label.col-sm-4 Choose device
        select#deviceSelect.cml-sm-6(onchange="getSchedule()")
          option &lt;select your device&gt;

      form#audio-schedule.hide
        div.schedulesave.col-sm-4.col-xs-12.right
          input.col-xs-4(type="image", title="Get device settings", src='/images/load.png'  onclick="" )
          input.col-xs-4(type="image", title="Save", src='/images/save.png', onclick="saveSchedule(event);" )
        div.clearfix

        label.col-xs-4 Schedule description
        input.col-xs-8(name="description", value="")

        div.schedule-devices.col-xs-12.col-sm-6
          h3.col-xs-10 Devices
          input.col-xs-2(type="image", title="Add device", src='/images/plus.png'  onclick="" )
          label#device-name.col-xs-12 ZIP-01
        div.clearfix

        .combos

        input.add-another-button.col-xs-12.col-sm-7(type='button', value='Add another combo', onClick="addNewCombo()")

    #schedulecomboTemplate.hide
      .schedulecombo
        h3.col-xs-12 Play sound combo
        .combo-timing.col-xs-12.col-sm-6

          .form-group.row
            label.col-xs-4 Every
            input.col-xs-7(name="[every]", value="10 mins")

          .form-group.row
            label.col-xs-4 from time
            input.col-xs-7(name="[from]", value="7:30pm")

          .form-group.row
            label.col-xs-4 until
            input.col-xs-7(name="[until]", value="9:30pm")

        .soundcombo.col-xs-12.col-sm-6
          h4 Sounds

          .sounds

          .form-group.row.col-xs-4
            input.add-another-button(type='button', value='Add another sound', onClick="")

      #soundTemplate.hide
        .sound
          .wait.form-group.row
            label.right.col-xs-4 then wait
            input.col-xs-6(name="[waits][]", value="10 mins")
          .form-group.row
            label.col-xs-4 play sound
            select.sound_file.col-xs-6(name="[sounds][]")
          div.clearfix
